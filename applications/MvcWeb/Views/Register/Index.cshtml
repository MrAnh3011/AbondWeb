

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Đăng ký</title>

    <link href="~/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Login/js/jquery.cookie.js"></script>
    <script src="~/Login/js/AuthServices.js"></script>
    <script src="~/Login/js/common.js"></script>
</head>
<body>
    <div class="loading-screen">
        <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
    </div>

    <div class="header">
        <div class="header-main">
            <div class="complogo"><img src="~/Login/images/logo.png" /></div>
            <div class="header-bottom">
                <div class="header-right w3agile">
                    <form autocomplete="off">
                        <div class="header-left-bottom agileinfo">
                            <input id="username" class="lgInput" type="text" placeholder="Số di động">
                            <input id="password" class="lgInput" type="password" placeholder="Mật khẩu">
                            <input id="rePassword" class="lgInput" type="password" placeholder="Nhập lại mật khẩu">
                        </div>
                        <div>
                            <div style="width: 80%;float: left;">
                                <input id="inputOTP" class="lgInput otpInput" type="text" maxlength="6" placeholder="Nhập mã OTP" />
                            </div>
                            <div>
                                <input id="btnOTP" type="button" class="otpBtn" value="Nhận OTP" />
                            </div>
                        </div>
                        <div class="otpCount">
                            <span>Mã xác thực sẽ hết hạn sau: </span>
                            <span id="countDown" style="color:red">180</span>
                            <span style="color:red">giây</span>
                        </div>
                    </form>
                </div>
                <input type="button" class="btnReg" id="submitRegBtn" value="Đăng ký" />
            </div>
        </div>
    </div>
</body>
</html>