@model MvcWeb.Models.DocumentPage
@{
    ViewBag.Title = Model.Title;
}

<div id="page_title" class="fw">
    <img class="img-fluid" src="@(Model.BarnerDoc.ImageBanner.Media.PublicUrl.Substring(1) ?? "")" alt="">
    <h2 class="page_title">@Model.BarnerDoc.Title</h2>
</div>

<section id="content" class="fw">
    <section id="document">

        <div class="document_tab">
            <div class="container">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#TPDN">Thông tin công bố TPDN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#PLDN">Pháp lý doanh nghiệp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#PLPH">Pháp lý phát hành</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="tab-content">
            <div class="tab-pane container active" id="TPDN">
                <div class="section_title">
                    <h2>Thông tin công bố TPDN</h2>
                    <span class="line"></span>
                </div>
                <div class="document_table">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tài liệu</th>
                                <th>Ngày đăng</th>
                                <th>Tải về</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.BondInfo.Count; i++)
                            {
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>
                                        <a data-toggle="modal" data-target="#myModal">
                                            @Model.BondInfo[i].DocTitle
                                        </a>
                                    </td>
                                    <td>@Model.BondInfo[i].DatePost.Value?.ToString("dd/MM/yyyy")</td>
                                    <td><a href="@(Model.BondInfo[i].DocFile.Media.PublicUrl.Substring(1)??"")"><i class="fas fa-download"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane container fade" id="PLDN">
                <div class="section_title">
                    <h2>Pháp lý doanh nghiệp</h2>
                    <span class="line"></span>
                </div>
                <div class="document_table">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tài liệu</th>
                                <th>Ngày đăng</th>
                                <th>Tải về</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.CoporateLegal.Count; i++)
                            {
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>
                                        <a data-toggle="modal" data-target="#myModal">
                                            @Model.CoporateLegal[i].DocTitle
                                        </a>
                                    </td>
                                    <td>@Model.CoporateLegal[i].DatePost.Value?.ToString("dd/MM/yyyy")</td>
                                    <td><a href="@(Model.CoporateLegal[i].DocFile.Media.PublicUrl.Substring(1)??"")"><i class="fas fa-download"></i></a></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane container fade" id="PLPH">
                <div class="section_title">
                    <h2>Pháp lý phát hành</h2>
                    <span class="line"></span>
                </div>
                <div class="document_table">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tài liệu</th>
                                <th>Ngày đăng</th>
                                <th>Tải về</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.LegalRelease.Count; i++)
                            {
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>
                                        <a data-toggle="modal" data-target="#myModal">
                                            @Model.LegalRelease[i].DocTitle
                                        </a>
                                    </td>
                                    <td>@Model.LegalRelease[i].DatePost.Value?.ToString("dd/MM/yyyy")</td>
                                    <td><a href="@(Model.LegalRelease[i].DocFile.Media.PublicUrl.Substring(1)??"")"><i class="fas fa-download"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</section>