                    @{
                        foreach (var item in Model.CustomerFeedback)
                        {
                            <div class="item">
                                <div class="comment_content">
                                    <h3 class="text-center">
                                        <img class="img-fluid" src="@(item.Image.Media.PublicUrl.Substring(1) ?? "")" alt="">
                                    </h3>
                                    <p>
                                        @item.Description
                                    </p>
                                    <h4 class="text-center"><i class="fas fa-quote-left"></i> @item.TopTitle</h4>
                                    <span>@item.SubTitle</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </section>

    <section id="partner" class="fw">
        <div class="container">
            <div id="partner_slide">
