            <div class="section_title">
                <h2>Đã huy động</h2>
                <p>Những gì chúng tôi đã làm</p>
                <span class="line"></span>
            </div>
            <div class="row mobilized_content">
                @{
                    foreach (var item in Model.WeDo)
                    {
                        <div class="col-lg-3 mobilized_content_grid">
                            <h2>@item.Title</h2>
                            <p>@item.Describes</p>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <section id="quote" class="fw">
        <div class="row mar0">
            <div class="col-lg-6 pad0">
                <img src="@(Model.Quote.Image.Media.PublicUrl.Substring(1) ?? "")" class="img-fluid" alt="">
            </div>
            <div class="col-lg-6 quote_content">
                <p><i class="fas fa-quote-left"></i></p>
                <p>
                    @Html.Raw(Model.Quote.Body)
                </p>
                <h5>@Model.Quote.HeaderTitle</h5>
                <h6>@Model.Quote.Title</h6>
            </div>
        </div>
    </section>

    <section id="comment" class="fw">
        <div class="container">
            <div class="comment">
                <h2 class="comment_title">Ý kiến của khách hàng</h2>
