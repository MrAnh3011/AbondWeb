@model MvcWeb.Models.TeaserPage
@{
    ViewBag.Title = Model.Title;
}

<div id="slide" class="fw">
    @foreach (var item in Model.SlidePost)
    {
        var excerpt = item.Post.Excerpt;
        <div class="item">
            <img class="img-fluid" src="@(item.Post.PrimaryImage.Media.PublicUrl.Substring(1) ?? "")" alt="">
            <div class="slide_caption">
                <div class="container">
                    <div class="pad15">
                        <h3>@item.Post.Tags[0].Title</h3>
                        <h2>@item.Post.Title</h2>
                        <p>
                            @excerpt.Substring(0, excerpt.Length - 4)
                        </p>
                        <a class="link" href="@item.Post.Permalink">Tìm hiểu thêm</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

